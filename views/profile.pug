extends layouts/main
include mixins/photoGrid

block content
    .page-title 작가 프로필
    .profile-container
        img.profile__img(src=`/${user.avatarUrl}`)
        .profile__info
            .profile__info-top
                span.profile__name=user.name

                if loggedUser && loggedUser.id === user.id
                    .profile__btn-container
                        a(href=routes.user+routes.editProfile) 
                            Button.menu.profile__btn ✏ 프로필 수정
                        a(href=routes.user+routes.changePassword)
                            Button.menu.profile__btn 🔐 비밀번호 변경
            
            .profile__bio #{user.bio==="" ? "아직 자기소개가 없습니다." : user.bio}

    +photoGrid(photos)