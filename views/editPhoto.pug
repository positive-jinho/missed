extends layouts/main

block content
    .page-title 사진 수정

    .upload-photo-container
        form.form(method="post", action=routes.editPhoto(photo.id))
            img(src=`/${photo.fileUrl}`)
            input(type="text", name="title", value=photo.title, placeholder="작품 제목")
            input(type="text", name="tag", value=tag)
            input(type="submit", value="수정하기")