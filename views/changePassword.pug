extends layouts/main

block content
    .page-title 비밀번호 변경

    form.form(method="post", action=routes.user+routes.changePassword)
        input(type="password", placeholder="현재 비밀번호", name="oldPassword")
        input(type="password", placeholder="바꿀 비밀번호", name="newPassword")
        input(type="password", placeholder="비밀번호 확인", name="newPassword2")
        input(type="submit", value="변경하기")